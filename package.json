{
  "private": true,
  "name": "mi-gestor-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build --no-prerender",
    "serve": "sirv build --port 5000 --cors --single --host",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch --host 0.0.0.0 --port 8080",
    "lint": "eslint src",
    "test": "jest",
    "vercel-build": "cross-env NODE_OPTIONS=\"--openssl-legacy-provider --max-old-space-size=4096\" preact build --no-prerender"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.0",
    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.0.0",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.5.1",
    "sirv-cli": "^2.0.2"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "axios": "^1.9.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.18.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "jsqr": "^1.4.0",
    "leaflet": "^1.9.4",
    "openssl": "^2.0.0",
    "preact": "^10.26.9",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
