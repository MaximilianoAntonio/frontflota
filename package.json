{
  "private": true,
  "name": "mi-gestor-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build --no-prerender && npm run copy-config",
    "copy-config": "node -e \"require('fs').copyFileSync('web.config', 'build/web.config')\"",
    "serve": "sirv build --port 5000 --cors --single --host",
    "start": "node server.js",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch --host 0.0.0.0 --port 8080",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.27.1",
    "@babel/plugin-transform-object-rest-spread": "^7.28.0",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-preact": "^1.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "preact-cli": "^3.5.1",
    "sirv-cli": "^2.0.2"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "axios": "^1.9.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^3.6.0",
    "express": "^4.18.2",
    "framer-motion": "^12.18.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "jsqr": "^1.4.0",
    "leaflet": "^1.9.4",
    "preact": "^10.26.9",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__mocks__/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(preact|@preact|enzyme|cheerio|enzyme-adapter-preact-pure)/)"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
